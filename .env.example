# Telegram Bot (required)
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Application Settings (production recommended)
## hybrid = IMAP IDLE near-real-time + safety polling
MAIL_RECEIVE_MODE=hybrid
## safety polling interval in seconds (used by polling mode and hybrid mode)
POLLING_INTERVAL=300
LOG_LEVEL=INFO
## zh_CN or en_US
DEFAULT_LANGUAGE=zh_CN

# TDLib Settings
## timeout (seconds) for fetching group admin/event logs (email delete listener)
TELEGRAM_CHAT_EVENT_LOG_TIMEOUT=30

# IMAP Settings
## mailboxes to monitor (comma-separated)
TELEGRAMAIL_IMAP_MONITORED_MAILBOXES=INBOX
## IDLE cycle refresh timeout in seconds (29 minutes)
IMAP_IDLE_TIMEOUT_SECONDS=1740
## short fallback polling when provider does not support IDLE
IMAP_IDLE_FALLBACK_POLL_SECONDS=30
## reconnect backoff start (exponential backoff after failures)
IMAP_IDLE_RECONNECT_BACKOFF_SECONDS=5
## optional, leave empty to auto-detect provider's sent mailbox
TELEGRAMAIL_IMAP_SENT_MAILBOX=

# LLM Settings (optional; keep disabled if you do not need AI summary)
ENABLE_LLM_SUMMARY=0
## only summarize long emails to control cost
LLM_SUMMARY_THRESHOLD=400
OPENAI_BASE_URL=your_openai_base_url_here
OPENAI_API_KEY=your_openai_key_here
OPENAI_EMAIL_SUMMARIZE_MODELS=first_model,second_model
