# Telegram Bot
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Application Settings
## Check emails every 5 minutes
POLLING_INTERVAL=300
LOG_LEVEL=INFO
## Default language. Currently only zh_CN or en_US
DEFAULT_LANGUAGE=zh_CN

# TDLib Settings
## TDLib request timeout (seconds) for fetching group admin/event logs (email delete listener)
TELEGRAM_CHAT_EVENT_LOG_TIMEOUT=30

# IMAP Settings
## Optional: Sent mailbox name used for server-side deletion of outgoing emails when a Telegram topic is deleted.
## If unset, the app tries to auto-detect via IMAP LIST (\\Sent) and common names, falling back to "Sent".
TELEGRAMAIL_IMAP_SENT_MAILBOX=

# LLM Settings
## set to 1 to enable email summary using llm
ENABLE_LLM_SUMMARY=0
## if the email content is longer than this threshold, use llm to summarize
LLM_SUMMARY_THRESHOLD=200
OPENAI_BASE_URL=your_openai_base_url_here
OPENAI_API_KEY=your_openai_key_here
OPENAI_EMAIL_SUMMARIZE_MODELS=1st_model_to_summarize_email_content,2nd_model_to_summarize_email_content
